<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="registrationInputs">
        <item name="android:layout_marginEnd">30sp</item>
        <item name="android:layout_marginStart">30sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="boxStrokeColor">@color/light_pink</item>
        <item name="hintTextColor">@color/light_pink</item>
    </style>

    <style name="helperTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="pinkButtonStyle">
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textSize">16sp</item>
        <item  name="android:insetTop">0dp</item>
        <item  name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>